using System;
using Examen_software_Llerena_Navarro.Interfaces;
using Examen_software_Llerena_Navarro.Services;

namespace Examen_software_Llerena_Navarro.PaymentMethods
{
    internal class LNPayPal : LNIPaymentMethods
    {
        public decimal Amount { get; set; }
        public string PaymentType { get; set; }
        public string PayPalAccount { get; set; }
        public string TransactionId { get; set; }

        // Constructor
        public LNPayPal(decimal amount, string paymentType, string payPalAccount, string transactionId)
        {
            Amount = amount;
            PaymentType = paymentType;
            PayPalAccount = payPalAccount;
            TransactionId = transactionId;
        }

        // Implementación del método requerido por la interfaz
        public bool ProcessPayment(out string resultMessage)
        {
            try
            {
                // Validación del PayPalAccount
                if (string.IsNullOrEmpty(PayPalAccount))
                {
                    resultMessage = "La cuenta de PayPal no está configurada.";
                    ConsoleOutputService.DisplayError(resultMessage);
                    return false; // Pago fallido
                }

                // Si la cuenta de PayPal está bien configurada, procesamos el pago
                resultMessage = $"Pago de {Amount} realizado con éxito usando PayPal. ID de transacción: {TransactionId}";
                ConsoleOutputService.DisplaySuccess(resultMessage);
                return true; // Pago exitoso
            }
            catch (Exception ex)
            {
                resultMessage = $"Error al procesar el pago: {ex.Message}";
